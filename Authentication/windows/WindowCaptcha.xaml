<Window x:Class="Authentication.WindowCaptcha"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Authentication"
        mc:Ignorable="d"
        Title="WindowCaptcha" Height="320" Width="370">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Border Name="borderCap" BorderBrush="Black" BorderThickness="1" Margin="0 10 0 0" Width="315" Height="103">
                <Canvas Name="CCaptcha" Width="300" Height="100" Background="AliceBlue"/>
            </Border>
            <StackPanel>
                <GroupBox Header="Введите текст с картинки" Margin="0 10 0 0">
                    <TextBox Name="tbCaptcha"  TextChanged="tbCaptcha_TextChanged"/>
                </GroupBox>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
