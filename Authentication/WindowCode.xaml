<Window x:Class="Authentication.WindowCode"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Authentication"
        mc:Ignorable="d"
       Title="WindowCode" Height="150" Width="215">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <GroupBox Header="Введите код:">
                <TextBox Name="tbCode" Width="150" FontSize="14" MaxLength="5" TextChanged="tbCode_TextChanged"/>
            </GroupBox>
            <TextBlock Name="tbTime" Margin="0 5 0 0"/>
        </StackPanel>
    </Grid>
</Window>
